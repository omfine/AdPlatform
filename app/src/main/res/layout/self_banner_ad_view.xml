<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainAdActivity"
    android:orientation="vertical"
    >
    <com.qwqer.adplatform.base.BaseViewPager
        android:id="@+id/adViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:fadeScrollbars="true"
        android:fadingEdge="none"
        />

    <com.qwqer.adplatform.view.DotView
        android:id="@+id/adDotView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:id="@+id/adCloseBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ad_close"
        android:layout_alignParentRight="true"
        android:paddingTop="12dp"
        android:paddingRight="11.5dp"
        android:paddingBottom="12dp"
        android:paddingLeft="12dp"
        android:visibility="gone"
        />
</RelativeLayout>