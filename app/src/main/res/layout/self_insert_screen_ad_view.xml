<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".MainAdActivity"
    android:orientation="vertical"
    >
    <com.qwqer.adplatform.base.BaseViewPager
        android:id="@+id/adViewPager"
        android:layout_width="262dp"
        android:layout_height="367dp"
        android:overScrollMode="never"
        android:fadeScrollbars="true"
        android:fadingEdge="none"
        android:layout_gravity="center_horizontal"
        />

    <com.qwqer.adplatform.view.DotView
        android:id="@+id/adDotView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal"
        />

    <ImageView
        android:id="@+id/adDialogCloseBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ad_dialog_close"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        />
</LinearLayout>